<!DOCTYPE html>
  <body>
    <form action='/articles/<%= @article.id %>' method='post'>
      <%= @article.title %>
      <%= @article.content %>
      <input id='hidden' type='hidden' name='_method' value='PATCH'>
      <p><label>Title: </label><input id='title' type='text' name='article[title]' value='<%=@article.title%>'></p>
      <p><label>Content: </label><input id='content' type='text' name='article[content]' value='<%=@article.content%>'></p>
      <p><input id='submit' type='submit'></p>
    </form>
  </body>
</html>